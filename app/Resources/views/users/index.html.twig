{% extends 'base.html.twig' %}

{% block title %}Users | {% endblock %}

{% block body %}
	<div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Users</h3>
    </div>
    <div class="panel-body">
      <table class="table table-striped">
      	<thead>
      		<tr>
      			<th>Id</th>
      			<th>Name</th>
      			<th>Email</th>
      			<th>Created_at</th>
      			<th>Updated_at</th>
      			<th></th>
      		</tr>
      	</thead>
      	<tbody>
      		{% for user in users %}
        		<tr>
        			<td>{{ user.id }}</td>
        			<td><a href="/user/{{ user.id }}">{{ user.name }}</a></td>
        			<td>{{ user.email }}</td>
        			<td>{{ user.createdAt | date('F j, Y, g:i a') }}</td>
        			<td>{{ user.updatedAt | date('F j, Y, g:i a') }}</td>
        			<td><a href="/user/delete/{{ user.id }}" class="btn btn-danger">
        				Delete
        			</a></td>
        		</tr>
      		{% else %}
      			empty
      		{% endfor %}
      	</tbody>
      </table>
    </div>
  </div>
  <a href="/signup" class="btn btn-primary">New user</a>
{% endblock %}